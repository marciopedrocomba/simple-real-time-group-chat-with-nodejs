<% 

function calcTime(duration) {

	let seconds = parseInt((duration / 1000) % 60)
	let minutes = parseInt((duration / (1000 * 60)) % 60)
	let hours = parseInt((duration / (1000 * 60 * 60)) % 24)
	let days = parseInt(duration / (24*60*60*1000))

	if (days > 0) {
		return `${days}d`
	}

	if(hours > 0) {
		return `${hours}h`
	}

	if(minutes > 0) {
		return `${minutes}min`
	}

	if(seconds > 0) {
		return `${seconds}sec`
	}

	return ``
}

%> 

